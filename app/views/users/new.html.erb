<div class="container">
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            <!-- Rails uses form_for(model) to help provide a secure way
            to handle the data. Ex. its doesn't line it when one of the
            symbols below isn't included in the migrate file. -->
            <%= form_for(@user) do |f| %>
                <div class="form-group">
                    <%= f.label :first_name %>
                    <%= f.text_field :first_name, class: "form-control" %>
                </div>
                <div class="form-group">
                    <%= f.label :last_name %>
                    <%= f.text_field :last_name, class: "form-control" %>
                </div>
                <div class="form-group">
                    <%= f.label :email %>
                    <%= f.email_field :email, class: "form-control" %>
                </div>
                <div class="form-group">
                    <%= f.label :password %>
                    <%= f.password_field :password, class: "form-control" %>
                </div>
                <%= f.submit "Create my account", class: "btn btn-primary" %>
            <% end %>
        </div>
    </div>
</div>
